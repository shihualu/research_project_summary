-                                emojiCount++;
-                                s.setSpan(span, i - 1, i + 1, 0);
-                            }
-                            buf = 0;
-                        }
-                    }
-                } else if (inArray(c, emojiChars)) {
-                    Drawable d = Emoji.getEmojiDrawable(c);
-                    if (d != null) {
-                        EmojiSpan span = new EmojiSpan(d, DynamicDrawableSpan.ALIGN_BOTTOM, size, fontMetrics);
