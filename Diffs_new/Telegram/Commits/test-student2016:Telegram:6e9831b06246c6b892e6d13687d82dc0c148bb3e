+
+
+				mContentResolver.insert(ChatProviderNew.CONTENT_URI_THREAD, values);
+			}
+
+		} finally {
+			threadCursor.close();
+		}*/
+		return true;
+	}
+
+
+	/**
+	 * Updates the BLOB message status to x and updates UI too
