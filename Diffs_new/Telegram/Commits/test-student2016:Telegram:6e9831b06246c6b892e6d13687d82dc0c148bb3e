+	public static String getUserIdFromXmppUserId(String xmppUserId) {
+
+		try {
+			xmppUserId = xmppUserId.substring(0, xmppUserId.indexOf("@"));
+
+		} catch (Exception e) {
+			xmppUserId = null;
+		}
+
+		return xmppUserId;
+	}
