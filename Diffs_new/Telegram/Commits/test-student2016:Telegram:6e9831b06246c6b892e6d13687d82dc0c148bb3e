+//reza_ak
+                             /*   if (mContentResolver.update(UserProvider.CONTENT_URI_GROUP_MEMBER, groupMembers, FriendGroupMember.DB_GROUP + "=? AND " + FriendGroupMember.DB_FRIEND + "=?", new String[]{members.getGroupID(), memberId}) == 0) {
