+	@Override
+	public boolean equals(Object o) {
+		if (o == null)
+			return false;
+
+		if (this == o)
+			return true;
+
+		if (!(o instanceof User))
+			return false;
+
+		User other = (User) o;
+
+		if (getUserId().length() == 0 && other.getUserId().length() == 0)
+			return false;
+
+		return other.getUserId().equals(getUserId());
+	}
