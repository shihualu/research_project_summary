+
+	public ArrayList<ChatMessage> setAsUnread(String threadId, int limit) {
+
+		String orderBy = "" ;
+		if (threadId.indexOf("-ch") != -1 ) {
+			Log.d("tegg" , "true") ;
+			orderBy = ChatMessage.MESSAGE_DATETIME ;
