+		public static String makePacketId(String userId) {
+			Long tsLong = System.currentTimeMillis()/1000;
+			String ts = tsLong.toString();
+			Random r = new Random();
+			int i1 = r.nextInt(80000 - 60000) + 60000;
+
+			String packetId = "packet-"+ userId + "-" + ts +i1;
+			return packetId;
+
+	}
