+    private void updateInnerItems() {
+        int count = innerListView.getChildCount();
+        for (int a = 0; a < count; a++) {
+            View child = innerListView.getChildAt(a);
+            if (child instanceof InnerThemeView) {
+                ((InnerThemeView) child).update();
+            }
+        }
+    }
