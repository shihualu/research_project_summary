+            android:layout_margin="5dp"
+            fb:com_facebook_object_id="shareitexampleapp"
+            fb:com_facebook_object_type="page" />
+    </LinearLayout>
+</ScrollView>
diff --git a/samples/ShareIt/res/menu/share_menu.xml b/samples/ShareIt/res/menu/share_menu.xml
