+package dagger.android.support;
+
+import android.app.Dialog;
+import android.os.Bundle;
+import android.support.design.widget.BottomSheetDialog;
+
+/**
+ * A {@link BottomSheetDialogFragment} that injects its members in {@link #onAttach(Context)} and can
+ * be used to inject child {@link Fragment}s attached to it. Note that when this fragment gets
+ * reattached, its members will be injected again.
+ */
+@Beta
+public abstract class DaggerBottomSheetDialogFragment extends DaggerAppCompatDialogFragment {
+
+  @Override
+  public Dialog onCreateDialog(Bundle savedInstanceState) {
+    return new BottomSheetDialog(getContext(), getTheme());
+  }
+}
